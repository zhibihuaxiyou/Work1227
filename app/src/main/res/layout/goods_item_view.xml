<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/goods_img"
        android:layout_width="75dp"
        android:layout_height="150dp"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/goods_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/goods_img"
        android:textSize="24sp"
        android:ellipsize="end"
        android:lines="2" />

    <TextView
        android:id="@+id/goods_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/goods_title"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/goods_img"
        android:ellipsize="end"
        android:lines="1"
        android:text="￥：0.00"
        android:textColor="@color/colorB"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/zy"
        android:layout_below="@id/goods_price"
        android:layout_marginTop="35dp"
        android:layout_toRightOf="@id/goods_img"
        android:textColor="@color/colorB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自营"
        android:background="@drawable/goods_zy_bg"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/pl"
        android:layout_toRightOf="@id/zy"
        android:layout_marginTop="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/goods_price"
        android:text="66328评论/"
        android:textColor="@color/colorSH"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/goods_price"
        android:layout_marginTop="35dp"
        android:layout_toRightOf="@id/pl"
        android:text="98%好评"
        android:textColor="@color/colorSH"
        android:textSize="12sp" />


</RelativeLayout>